{% extends "matrix-field-preview/_layouts/settings" %}

{% set title = "New Categories" | t("matrix-field-preview") %}

{% set fullPageForm = true %}

{% import "_includes/forms" as forms %}


{% block content %}
    <input type="hidden" name="pluginHandle" value="matrix-field-preview">
    <input type="hidden" name="action" value="plugins/save-plugin-settings">
    {% namespace 'settings' %}
        
        {{ forms.textField({
            first: true,
            label: "Name"|t('matrix-field-preview'),
            instructions: "The name of this group."|t('matrix-field-preview'),
            id: 'name',
            name: 'name',
            autofocus: true,
            required: true,
        }) }}

        {{ forms.textareaField({
            label: "Description"|t('matrix-field-preview'),
            instructions: "A short description of this category"|t('matrix-field-preview'),
            id: "description",
            name: "description",
        }) }}

    {% endnamespace %}
{% endblock %}
