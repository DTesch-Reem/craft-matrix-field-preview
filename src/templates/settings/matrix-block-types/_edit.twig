{% extends "matrix-field-preview/_layouts/settings" %}

{% do view.registerAssetBundle("craft\\web\\assets\\fileupload\\FileUploadAsset") %}

{% set title = "'" ~ blockTypeConfig.blockType.name ~ "' Preview" %}

{% set fullPageForm = true %}

{% set crumbs = [
    {
        label: "Matrix Field Previews"|t('matrix-field-preview'),
        url: url('matrix-field-preview/settings')
    },
    {
        label: "Configure Matrix Field Previews"|t('matrix-field-preview'),
        url: url('matrix-field-preview/settings/matrix-block-types')
    }
] %}

{% block content %}
    {{ actionInput('matrix-field-preview/matrix-block-types/save') }}
    {{ redirectInput('matrix-field-preview/settings/matrix-block-types') }}

    {% if blockType.id %}{{ hiddenInput('blockTypeId', blockType.id) }}{% endif %}

    {% include "matrix-field-preview/_includes/settings/block-type.twig" with {
        type: "matrix",
    } %}
{% endblock %}